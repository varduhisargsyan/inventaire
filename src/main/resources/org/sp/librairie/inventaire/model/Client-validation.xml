<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="lname">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Indiquez le nom</message>
        </field-validator>
    </field>
    <field name="fname">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Indiquez le pr√©nom</message>
        </field-validator>
    </field>
    <field name="nfix">
        <field-validator type="regex">
            <param name="regex"><![CDATA[([0][5][4][9]\d{6})]]></param>
            <message>Le numero fix doit commencer par 0549 </message>
        </field-validator>
    </field>
    <field name="nmob">
        <field-validator type="regex">
            <param name="regex"><![CDATA[([0]\d{9})]]></param>
            <message>Numero n'est pas valable</message>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="email">
       <message>Email non valide</message>
        </field-validator>
    </field>

</validators>